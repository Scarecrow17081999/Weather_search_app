<html lang="en">
  <head>
   {{>headerLinks}}
  </head>
  <body>
{{>navbar}}
    <!-- main header -->

    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left side div -->
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to weather app</p>
              <h1>
                Get the latest
                <span class="spanColor">Weather</span>
                Info of your City
              </h1>
              <a href="/weather">
                <button>check now</button>
              </a>
            </div>
            <!-- right side div -->
            <div class="col-md-6 col-12 main_header_right">
              <div
                id="carouselExampleSlidesOnly"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      class="d-block w-100"
                      src="https://img.freepik.com/premium-vector/weather-forecast-concept_118813-4641.jpg"
                      alt="First slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="https://img.freepik.com/premium-vector/winter-weather-forecast_53562-11716.jpg?w=2000"
                      alt="Second slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="https://as2.ftcdn.net/v2/jpg/03/82/85/33/1000_F_382853323_Vq2eAHxYkZkN108faFC19K5MfGG6ZA0u.jpg"
                      alt="Third slide"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- footer code -->
    {{>footer}}
  </body>
</html>